---
BasedOnStyle: LLVM
AccessModifierOffset: -4
BraceWrapping:
  AfterClass: true
  AfterControlStatement: false
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: false
  BeforeElse: false
BreakBeforeBraces: Custom
ColumnLimit: 0
IndentWidth: 4
IndentCaseLabels: true
KeepEmptyLinesAtTheStartOfBlocks: false
MaxEmptyLinesToKeep: 1
PointerAlignment: Left
Standard: Cpp11
TabWidth: 4
UseTab: Never
AllowShortIfStatementsOnASingleLine: OnlyFirstIf
